                                    "titulo": {
                                        "type": "string",
                                        "example": "Receta 1"
                                    },
                                    "descripcion": {
                                        "type": "string",
                                        "example": "descripcion de la receta"
                                    },
                                    "ingredientes": {
                                        "type": "string",
                                        "example": "Preparación de la receta"
                                    },
                                    "instrucciones": {
                                        "type": "string",
                                        "example": "instrucciones de la receta"
                                    },
                                    "imagen": {
                                        "type": "string",
                                        "format": "binary"
                                    },
                                    "etiquetas": {
                                        "type": "string",
                                        "example": "[1,2,3]"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Receta creada exitosamente"
